<div class="container p-4">
    <div class="row">
        <div class="w-100 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3> {{#unless rolData}}
                        Nuevo Permiso
                        {{ else }}
                        Editando Permiso
                        {{/unless }}</h3>
                </div>
                <div class="card-body" style="text-align: left">
                    <form action="/admin/permissions {{rolData.id}}" method="POST" >
                        <div class="row">
                            <div class="col-md-4">
                                <dl>
                                    <dt><label for="name">Nombre</label></dt>
                                    <dd><input type="text" value="{{rolData.name}}" class="form-control" name="name"
                                               placeholder="Nombre" autofocus></dd>
                                </dl>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <dl>
                                    <dt><label for="resources">Recurso</label></dt>
                                    <dd><input type="text" value="{{rolData.resources}}" class="form-control"
                                            name="resources" placeholder="Recurso" autofocus></dd>
                                </dl>
                            </div>
                            <div class="col">
                                <dl>
                                    <dt><label for="operation">Operaci√≥n:</label></dt>
                                    <dd>
                                        <select name="operation" class="custom-select">
                                            {{#each operations}}
                                                <option value="{{value}}"  {{ selectedOption value ../rolData.operation }}>{{label}}</option>
                                            {{/each}}
                                        </select>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>