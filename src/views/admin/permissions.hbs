<div class="container p-4">
    <div class="row">
        <div class="w-100 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <button onclick="location.href='/permissions/add/'" class="btn btn-success">
                            Nuevo Permiso
                        </button>
                    </div>
                    <table class="table">
                        <thead>
                            <th>Recurso</th>
                            <th>Operación</th>
                            <th>Nombre</th>
                            <th></th>
                        </thead>
                        <tbody>
                        {{#each permissions}}
                            <tr>
                                <td>{{resources}}</td>
                                <td>{{operation}}</td>
                                <td>{{name}}</td>
                               
                                <td>
                                    <button onclick="editarPermiso({{id}}); " class="btn btn-info">
                                        Editar
                                    </button>
                                </td>
                            </tr>
                        {{else}}
                            
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
function editarPermiso(id){
    if(confirm('¿Esta seguro de que desea editar el permiso?'))
        location.href = '/admin/permissions/edit/'+id;
    return false;
}
</script>