<div class="container p-4">
    <div class="row">
        <div class="w-100 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <button onclick="location.href='/admin/permissionForm'" class="btn btn-success">
                            Nuevo Permiso
                        </button>
                    </div>
                    <table class="table">
                        <thead>
                            <th>Nombre</th>
                            <th>Recurso</th>
                            <th>Operación</th>
                            <th></th>
                        </thead>
                        <tbody>
                        {{#each permissions}}
                            <tr>
                                <td>{{ name }}</td>
                                <td>{{ resources }}</td>
                                <td>{{ constantLabel 'PERMISSION_OPERATIONS' operation }}</td>

                                <td>
                                    <button onclick="location.href = '/admin/permissions/edit/'+{{id}}" class="btn btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </td>
                            </tr>
                        {{else}}
                            
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
function editarPermiso(id){
    if(confirm('¿Esta seguro de que desea editar el permiso?'))
        location.href = '/admin/permissions/edit/'+id;
    return false;
}
</script>