<div class="container p-4">
    <div class="row">
        <div class="mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <button onclick="location.href='/admin/rolesForm'" class="btn btn-success">
                            Nuevo Rol
                        </button>
                    </div>
                    <table class="table">
                        <thead>
                            <th>Rol</th>
                            <th>Creado el</th>
                            <th></th>
                        </thead>
                        <tbody>
                        {{#each listRoles}}
                            <tr>
                                <td>{{name}}</td>
                                <td>
                                    {{#if isadmin}}
                                        Si
                                    {{else}}
                                        No
                                    {{/if}}
                                </td>
                                <td>{{timeago created_at}}</td>
                                <td>
                                    <button onclick="eliminarRol({{id}});" class="btn btn-danger">
                                        Eliminar
                                    </button>
                                </td>
                            </tr>
                        {{else}}
                            
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
function eliminarRol(id){
    if(confirm('Â¿Esta seguro de que desea eliminar el rol?'))
        location.href = '/admin/roles/delete/'+id;
    return false;
}
</script>