<div class="container p-4">
    <div class="row">
        <div class="mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <button onclick="location.href='/signup'" class="btn btn-success">
                            Nuevo Usuario
                        </button>
                    </div>
                    <table class="table">
                        <thead>
                            <th>Nombre Completo</th>
                            <th>Usuario</th>
                            <th>Rol</th>
                            <th>Creado el</th>
                            <th>Modificar</th>
                        </thead>
                        <tbody>
                        {{#each users}}
                            <tr>
                                <td>{{fullname}}</td>
                                <td>{{username}}</td>
                                <td>{{rol}}</td>
                                <td>{{timeago created_at}}</td>
                                <td>
                                    <button onclick="location.href = '/admin/users/edit/'+{{id}}" class="btn btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </td>
                            </tr>
                        {{else}}
                            
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>