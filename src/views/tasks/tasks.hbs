<div class="container p-4">
    <div class="row">
        <div class="mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <button onclick="location.href='/tasks/add'" class="btn btn-success">
                            Nueva Tarea
                        </button>
                    </div>
                    <table class="table">
                        <thead>
                            <th>ID</th>
                            <th>Descripci√≥n</th>
                            <th>Estado</th>
                            <th>Creado el</th>
                        </thead>
                        <tbody>
                        {{#each tasks}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{status}}</td>
                                <td>{{description}}</td>
                                <td>{{timeago created_at}}</td>
                                <td>
                                    <button onclick="location.href = '/tasks/edit/'+{{id}}" class="btn btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </td>
                            </tr>
                        {{else}}
                            
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>